<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/zoomPlus"
            android:src="@drawable/ic_zoom_plus_55dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@id/map"
            app:layout_constraintTop_toTopOf="@id/map"/>

    <ImageView
            android:id="@+id/zoomMinus"
            android:src="@drawable/ic_zoom_minus_55dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="@id/map"
            app:layout_constraintTop_toBottomOf="@id/zoomPlus"/>

    <ImageView
            android:id="@+id/getLocation"
            android:src="@drawable/ic_mylocation_55dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="@id/map"
            app:layout_constraintTop_toBottomOf="@id/zoomMinus"/>

    <ImageView
            android:id="@+id/nextTracker"
            android:src="@drawable/ic_next_tracker_55dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="@id/map"
            app:layout_constraintTop_toBottomOf="@id/getLocation"/>
</androidx.constraintlayout.widget.ConstraintLayout>